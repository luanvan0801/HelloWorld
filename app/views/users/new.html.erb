<% provide(:title, 'Sign up') %>
<h1>Sign Up</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag("/adduser", :method => "post") do %>
		<div class="row">
			<div class="col-lg-8">
				<label for="tName">Username:</label>
				<input name="username" type="text" class="form-control" id="username" placeholder="Enter username Name">
			</div>
		</div>
		
		<div class="row">
			<div class="col-lg-8">
				<label for="tName">Email:</label>
				<input name="email" type="text" class="form-control" id="email" placeholder="Enter email">
			</div>
		</div>
		
		<div class="row">
			<div class="col-lg-8">
				<label for="tName">Password:</label>
				<input name="password" type="text" class="form-control" id="password" placeholder="Enter username Name">
			</div>
		</div>
		
		<div class="row">
			<div class="col-lg-8">
				<label for="tName">Confirm Password:</label>
				<input name="password_confirmation" type="text" class="form-control" id="password_confirmation" placeholder="Enter confirmation password">
			</div>
		</div>
		<br>
		
	<input value="Sign up" type="submit" class="btn btn-primary">
    <% end %>
	
	<% if @user1!=nil %>
		<% if @user1.errors.any? %>
			<% @user1.errors.full_messages.each do |msg| %>
				<p><%= msg %></p>
			<% end %>
		<% end %>
	<% end %>	
  </div>
</div>
