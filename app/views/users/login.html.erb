<% provide(:title, 'Sign In') %>
<h1>Sign In</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag("/checklogin", :method => "post") do %>
		<div class="row">
			<div class="col-lg-8">
				<label for="tName">Username:</label>
				<input name="username" type="text" class="form-control" id="username" placeholder="Enter username Name">
			</div>
		</div>
		<div class="row">
			<div class="col-lg-8">
				<label for="tName">Password:</label>
				<input name="password" type="text" class="form-control" id="password" placeholder="Enter username Name">
			</div>
		</div>
		
		<br>
		
	<input value="Sign In" type="submit" class="btn btn-primary">
	<br>
	<%= check_box_tag 'remember_me' %> Remember me
    <% end %>

  </div>
</div>
